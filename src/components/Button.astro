---
interface Props {
  href?: string;
  variant?: "primary" | "outline" | "ghost";
}

const { href, variant = "primary" } = Astro.props;

const styles = {
  primary: "bg-white text-primary hover:scale-105",
  outline: "border-2 border-white text-white hover:bg-white hover:text-primary",
  ghost: "text-white hover:underline"
};
---

{
  href ? (
    <a
      href={href}
      class={`inline-block px-6 py-3 rounded-full font-semibold transition duration-300 ${styles[variant]}`}
    >
      <slot />
    </a>
  ) : (
    <button
      class={`px-6 py-3 rounded-full font-semibold transition duration-300 ${styles[variant]}`}
    >
      <slot />
    </button>
  )
}
