---
import Button from "./Button.astro";
import Container from "./Container.astro";

interface Props {
  title: string;
  subtitle: string;
  image?: string;
  buttonText?: string;
  buttonHref?: string;
}

const { title, subtitle, image, buttonText, buttonHref } = Astro.props;
---

<section class="min-h-[85vh] flex items-center bg-gradient-to-br from-primary to-primary-dark text-white">
  <Container size="xl" paddingY="py-24">
    <div class="w-full flex flex-col md:flex-row items-center gap-12">

      <div class="flex-1 text-center md:text-left">
        <h1 class="text-4xl md:text-6xl font-bold mb-6 leading-tight">
          {title}
        </h1>

        <p class="text-lg md:text-xl opacity-90 mb-8 max-w-xl mx-auto md:mx-0">
          {subtitle}
        </p>

        {buttonText && buttonHref && (
          <Button href={buttonHref}>
            {buttonText}
          </Button>
        )}
      </div>

      {image && (
        <div class="flex-1 flex justify-center">
          <img
            src={image}
            alt={title}
            class="w-48 md:w-64"
            loading="lazy"
          />
        </div>
      )}

    </div>
  </Container>
</section>
